<% include ../partials/header %>

<div class="container-fluid">

<form action="/results/<%= student._id%>?_method=PUT" method="POST">

    <div class="form-row">
<div class="form-group col-md-6">
<label for"roll_nos">Semester</label>
<input type="text"  id="roll_no" class="form-control " name="result[sem]"  value="<%= student.sem %>"  >
</div>

<div class="form-group col-md-6">
<label for"roll_nos">DMC Number</label>
<input type="text"  id="roll_no" class="form-control " name="result[dmc_no]" value="<%= student.dmc_no %>" >
</div>

<div class="form-group col-md-6">
<label for"roll_nos">Roll Number</label>
<input type="text"  id="roll_no" class="form-control " name="result[regn_no]" value="<%= student.regn_no %>" >
</div>



<div class="form-group col-md-6">
<label for"name">Total Marks</label>
<input type="text"  id="name" class="form-control " name="result[total_marks]" value="<%= student.total_marks %>" >
</div>

<div class="form-group col-md-6">
<label for"branch">Maximum Marks</label>
<input type="text"  id="branch" class="form-control " name="result[max_marks]" value="<%= student.total_marks %>" >
</div>

<div class="form-group col-md-6">
<label for"dmc">Reappear</label>
<input type="text"  id="dmc" class="form-control " name="result[reappear]" value="<%= student.reappear %>">
</div>

<div class="form-group col-md-6">
<label for"dmc_taken">DMC Taken</label>

<select id="dmc_taken" class="form-control" name="result[dmc_taken]">
          <option selected> <%= student.dmc_taken %></option>
          <option>Yes</option>
          <option>No</option>

        </select>
</div>




</div>



<button type="submit" class="btn btn-primary">Submit</button>


</form>
</div>
<% include ../partials/footer %>

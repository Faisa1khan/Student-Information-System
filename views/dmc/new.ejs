<% include ../partials/header %>

<div class="">

<form action="/students/<%= student._id%>/dmc" method="POST">
    <div class="form-row">
<h1>Add DMC of  <%= student.name%></h1>
<div class="form-group col-md-6">
<label for"sem">Semester</label>
<input type="text"  id="sem" class="form-control " name="result[sem]" placeholder="Semester" >
</div>

<div class="form-group col-md-6">
<label for"dmc_no">DMC Number</label>
<input type="text"  id="dmc_no" class="form-control " name="result[dmc_no]" placeholder="DMC No." >
</div>

<div class="form-group col-md-6">
<label for"roll_nos">Roll Number</label>
<input type="text"  id="roll_no" class="form-control " name="result[roll_no]" placeholder="Roll No." >
</div>

<div class="form-group col-md-6">
<label for"taken">DMC Taken</label>

<select id="taken" class="form-control" name="result[taken]">
          <option selected></option>
          <option>Yes</option>
          <option>No</option>

        </select>
</div>


</div>



<button type="submit" class="btn btn-primary">Submit</button>


</form>
</div>
<% include ../partials/footer %>

<% include ../partials/header %>

<div class="container-fluid">
</div>
<form action="/students/<%= student._id%>?_method=PUT" method="POST">
<div class="form-row">
        <div class="form-group col-md-6">
        <label for"regn_no">Registration No.</label>
        <input type="text"  id="regn_no" class="form-control " name="student[regn_no]" value = "<%=student.regn_no %>">
        </div>
        
        <div class="form-group col-md-6">
        <label for"name">Name</label>
        <input type="text"  id="name" class="form-control " name="student[name]"  value = "<%=student.name %>">
        </div>

        <div class="form-group col-md-6">
        <label for"name">Mother Name</label>
        <input type="text"  id="name" class="form-control " name="student[mother_n]" value = "<%=student.mother_n %>">
        </div>

          <div class="form-group col-md-6">
        <label for"name">Father Name</label>
        <input type="text"  id="name" class="form-control " name="student[father_n]"  value = "<%=student.father_n %>">
        </div>

          <div class="form-group col-md-6">
        <label for"name">City</label>
        <input type="text"  id="name" class="form-control " name="student[city]"  value = "<%=student.city %>">
        </div>
        
        <div class="form-group col-md-6">
          <label for"year">Year</label>
          <input type="text"  id="year" class="form-control " name="student[batch]"  value = "<%=student.batch %>">
          </div>
        
        <div class="form-group col-md-6">
        <label for="branch">Branch</label>
                <select id="branch" class="form-control" name="student[branch]" value = ""</select>>
                  <option selected><%=student.branch %></option>
                  <option>CSE</option>
                  <option>CE</option>
                  <option>ME</option>
                  <option>ECE</option>
                  <option>EEE</option>
                </select>
        </div>
        
        
  
        </div>
          <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
<% include ../partials/footer %>
